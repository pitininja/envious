{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "ts-node": {
        "transpileOnly": true,
        "files": true
    },
    "compilerOptions": {
        "outDir": "./dist",
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "declaration": true,
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
